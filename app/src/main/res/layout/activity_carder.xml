<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table"
    tools:context=".CarderActivity">

    <LinearLayout
        android:id="@+id/pl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_1"
                android:layout_width="76dp"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal|left"
                app:srcCompat="@drawable/people" />

            <ImageView
                android:id="@+id/group_1"
                android:layout_width="42dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:rotation="121"
                android:rotationX="42"
                app:srcCompat="@drawable/cards_2" />
        </LinearLayout>

        <TextView
            android:id="@+id/player_1_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/group_2"
                android:layout_width="80dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:rotation="-96"
                android:rotationX="29"
                app:srcCompat="@drawable/cards_2" />

            <ImageView
                android:id="@+id/player_2"
                android:layout_width="76dp"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/people" />

        </LinearLayout>

        <TextView
            android:id="@+id/player_2_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/aclonica"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/player_3"
                android:layout_width="76dp"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal|left"
                app:srcCompat="@drawable/people" />

            <ImageView
                android:id="@+id/group_3"
                android:layout_width="85dp"
                android:layout_height="74dp"
                android:layout_weight="1"
                android:rotation="33"
                android:rotationX="25"
                app:srcCompat="@drawable/cards_2" />
        </LinearLayout>

        <TextView
            android:id="@+id/player_3_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pl_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/group_4"
                android:layout_width="85dp"
                android:layout_height="74dp"
                android:layout_weight="1"
                android:rotation="-42"
                android:rotationX="25"
                app:srcCompat="@drawable/cards_2" />

            <ImageView
                android:id="@+id/player_4"
                android:layout_width="76dp"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal|left"
                app:srcCompat="@drawable/people" />
        </LinearLayout>

        <TextView
            android:id="@+id/player_4_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/aclonica"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="255dp"
        android:layout_y="1dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main"
            android:layout_width="77dp"
            android:layout_height="84dp"
            app:srcCompat="@drawable/people" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:rotationX="25"
            app:srcCompat="@drawable/card_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_1"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:rotationX="25"
                app:srcCompat="@drawable/c_1" />

            <ImageView
                android:id="@+id/card_2"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:rotationX="25"
                app:srcCompat="@drawable/c_1" />

            <ImageView
                android:id="@+id/card_3"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:rotationX="25"
                app:srcCompat="@drawable/c_1" />

            <ImageView
                android:id="@+id/card_4"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:rotationX="25"
                app:srcCompat="@drawable/c_1" />

            <ImageView
                android:id="@+id/card_5"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:rotationX="25"
                app:srcCompat="@drawable/c_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:rotationY="90"
                app:srcCompat="@drawable/c_1" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:rotationY="90"
                android:translationX="-15dp"
                app:srcCompat="@drawable/c_1" />

        </LinearLayout>

        <TextView
            android:id="@+id/my_stavka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:text="Your balance: 10000"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_timer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:fontFamily="@font/aclonica"
            android:gravity="right"
            android:text="00:30"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/button" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/aclonica"
                android:text="FOLD"
                android:textColor="@color/design_default_color_error"
                android:textSize="24sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_raise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black" />

                <SeekBar
                    android:id="@+id/seekBar2"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="1"
                    android:progressBackgroundTint="@color/black"
                    android:progressTint="@color/black"
                    android:secondaryProgressTint="@color/black"
                    android:thumbTint="@color/purple_700"
                    android:tickMarkTint="#000000" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/button" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/aclonica"
                android:text="RAISE"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/button" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/aclonica"
                android:text="CHECK"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </FrameLayout>

    </LinearLayout>

</AbsoluteLayout>